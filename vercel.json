{
  "functions": {
    "api/lzt-proxy.js": {
      "maxDuration": 30
    },
    "api/winpay/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/lzt-proxy/(.*)",
      "destination": "/api/lzt-proxy?path=$1"
    },
    {
      "source": "/api/winpay/(.*)",
      "destination": "/api/winpay/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Timestamp, X-Partner-ID, X-Signature, X-External-ID, Channel-ID"
        }
      ]
    }
  ]
}
